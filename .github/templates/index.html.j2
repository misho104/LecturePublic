{% macro pdf_item(file, tag) %}
    <{{tag or "li"}} class="pdf-item">
        {#--#}<a href="{{ file.filename }}" class="pdf-name">{{ file.filename }}</a>
        <div class="pdf-info">
            {% if file.last_commit_date -%}
                <span class="pdf-date">Updated: {{ file.last_commit_date }}</span>
            {% endif -%}
            {%- if config.display.show_version_badges -%}
                {%- if file.is_old_version -%}
                    <span class="old-version-badge">{{ config.display.old_version_badge_text }}</span>
                {%- else -%}
                    <span class="version-badge">{{ config.display.version_badge_text }}</span>
                {%- endif -%}
            {%- endif -%}
            {%- if config.display.show_file_sizes %}<span class="pdf-size">{{ file.size }}</span>{%- endif -%}
            <a href="{{ file.github_history_url }}" class="pdf-history-link">History</a>
        </div>
    </{{tag or "li"}}>
{%- endmacro -%}
{%- macro lecture_item_sub(title, file) -%}
    <li class="pdf-item-block">
        {#--#}<a href="{{ file.filename }}">{{ title }}</a>{#--#}
    </li>
{%- endmacro -%}
{%- macro lecture_item(head, year) -%}
    {%- set data = get_lecture_files(head, year) -%}
    {%- set type = data[0] -%}
    {%- set files = data[1] -%}
    {%- if type == 0 -%}
    {%- elif type == 1 -%}
        <li class="lecture-block">
            <span>{{- year -}}</span>
            <ul>
                {{ lecture_item_sub("Guidance", files[2]) -}}
                {{- lecture_item_sub("Midterm Exam", files[0]) -}}
                {{- lecture_item_sub("Term Exam", files[0]) }}
            </ul>
        </li>
    {%- else -%}
        {%- for file in files -%}
            {{- lecture_item_sub(file.filename, file) -}}
        {%- endfor -%}
    {%- endif -%}
{%- endmacro -%}
